[Unit]
Description=BIOME flight recorder (waits for GPIO trigger then records)
After=multi-user.target

[Service]
Type=simple
User=starr
Group=starr

WorkingDirectory=/var/lib/biomecam

ExecStart=/usr/local/bin/biomecam

Restart=on-failure
RestartSec=1

StandardOutput=journal
StandardError=journal

TimeoutStopSec=10
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
